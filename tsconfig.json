{
  "include": [
    "src/**/*"
  ],
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "strict": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strictPropertyInitialization": false,
    "noImplicitAny": false,
    "skipLibCheck": true
  },
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}
